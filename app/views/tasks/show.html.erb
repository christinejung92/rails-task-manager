
<h2><%= @task.title %></h2>
<%= link_to "Edit this task", edit_path  %>
<%= link_to "Delete", destroy_path(@task), method: :delete, data: {confirm: "Confirm to delete?"}  %>

<p><%= @task.details %></p>
<% if @task.completed %>  
<input type="checkbox" checked disabled><span>"This task is completed</span>
<% else %> 
<input type="checkbox" disabled><span>"This task is not completed yet</span>
<% end %>

<%= link_to "Back to list", tasks_path  %>