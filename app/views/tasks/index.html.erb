<h1>My tasks</h1>
<ul class="list-unstyled">
 <% @tasks.each do |task|  %>
 <li> <% if task.completed%>  
        <input type="checkbox" checked disabled>
      <% else %> 
        <input type="checkbox" disabled>
      <% end %>
      <%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_path  %>
